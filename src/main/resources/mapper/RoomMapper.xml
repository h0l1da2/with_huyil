<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.with.hyuil.dao.RoomMapper">
	<resultMap type="RoomVo" id="roomvo">
		<result property="id" column="id"/>
		<result property="hotelId" column="hotel_id"/>
		<result property="name" column="name"/>
		<result property="content" column="content"/>
		<result property="max" column="max"/>
		<result property="bed" column="bed"/>
		<result property="normalPrice" column="normal_price"/>
		<result property="holidayPrice" column="holiday_price"/>
		<result property="adminId" column="admin_check_id"/>
	</resultMap>

	<insert id="insertRoom" parameterType="RoomVo">
		<selectKey keyProperty="id" resultType="long" order="BEFORE">
			select seq_room.nextval from dual
		</selectKey>
		insert into room
		(id, hotel_id, name, content, max, bed, normal_price, holiday_price)
		values
		(#{id}, #{hotelId}, #{name}, #{content}, #{max}, #{bed}, #{normalPrice}, #{holidayPrice})
	</insert>

	<select id="getroomList" parameterType="long" resultType="Map">
		select a.id, a.name, a.content, a.max, a.bed, a.normal_price, a.holiday_price, b.uuid
		from room a left join files b on(a.id = b.room_id) where a.hotel_id = #{hotel_id}
	</select>

	<select id="getRoom" parameterType="long" resultType="RoomVo">
		select * from room where hotel_id = #{hotelId}
	</select>

	<select id="findByRoomId" parameterType="long" resultType="RoomVo">
		select * from room where id = #{id}
	</select>

</mapper>